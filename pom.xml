	<url/>
	<licenses>
		<license/>
	</licenses>
    <developers>
        <developer>
            <name>Hanif Kukkalli</name>
            <organization>Kukkalli GmbH</organization>
            <email>hanif@kukkalli.com</email>
            <url>https://kukkalli.com</url>
        </developer>
    </developers>
	<scm>
		<connection>scm:git:git@github.com:kukkalli/aws-controller-java.git</connection>
        <developerConnection>scm:git:git@github.com:kukkalli/aws-controller-java.git</developerConnection>
        <tag>HEAD</tag>
